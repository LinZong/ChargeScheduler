<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Button
            android:drawableLeft="@drawable/ic_done_blue_400_24dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            style="@style/ReservationTypeSelectButtonStyle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/ConfirmBatterySelection"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:text="确认" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="124dp"/>
    <TextView
            android:text="设置剩余电量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <SeekBar
            android:progress="20"
            android:max="100"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:id="@+id/RemainBatterySeekbar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
    <TextView
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="40dp"
            android:id="@+id/RemainBatteryNum" app:layout_constraintStart_toEndOf="@+id/RemainBatterySeekbar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>